# eCitizen Voice Assistant - Environment Variables
# Copy this file to .env and fill in your actual values
# NEVER commit your .env file to version control

# ===========================================
# APPLICATION SETTINGS
# ===========================================
APP_NAME="eCitizen Voice Assistant"
APP_ENV=development
DEBUG=true
SECRET_KEY=your-secret-key-here-generate-a-secure-one

# ===========================================
# SERVER SETTINGS
# ===========================================
HOST=0.0.0.0
PORT=8000
ALLOWED_HOSTS=localhost,127.0.0.1

# ===========================================
# CORS SETTINGS
# ===========================================
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# ===========================================
# GOOGLE GEMINI API
# ===========================================
# Get your API key from: https://makersuite.google.com/app/apikey
GEMINI_API_KEY=your-gemini-api-key-here
GEMINI_MODEL=gemini-pro

# ===========================================
# GOOGLE DIALOGFLOW
# ===========================================
# Create a Dialogflow project at: https://dialogflow.cloud.google.com/
DIALOGFLOW_PROJECT_ID=your-dialogflow-project-id
DIALOGFLOW_LANGUAGE_CODE=en
GOOGLE_APPLICATION_CREDENTIALS=/path/to/your/dialogflow-credentials.json

# ===========================================
# AFRICA'S TALKING SMS
# ===========================================
# Sign up at: https://africastalking.com/
# Get sandbox credentials for testing
AFRICASTALKING_USERNAME=sandbox
AFRICASTALKING_API_KEY=your-africastalking-api-key-here
AFRICASTALKING_SENDER_ID=eCitizen

# ===========================================
# DATABASE SETTINGS
# ===========================================
# SQLite (Development)
DATABASE_URL=sqlite:///./ecitizen.db

# PostgreSQL (Production) - uncomment and configure
# DATABASE_URL=postgresql://user:password@localhost:5432/ecitizen

# ===========================================
# REDIS (Optional - for caching and sessions)
# ===========================================
# REDIS_URL=redis://localhost:6379/0

# ===========================================
# RATE LIMITING
# ===========================================
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_HOUR=1000

# ===========================================
# SESSION SETTINGS
# ===========================================
SESSION_TIMEOUT_MINUTES=30
SESSION_SECRET=your-session-secret-here

# ===========================================
# LOGGING
# ===========================================
LOG_LEVEL=INFO
LOG_FILE=logs/app.log

# ===========================================
# VOICE SETTINGS
# ===========================================
VOICE_LANGUAGE=en-KE
VOICE_RATE=150
VOICE_VOLUME=1.0

# ===========================================
# ECITIZEN API (if available)
# ===========================================
# ECITIZEN_API_URL=https://api.ecitizen.go.ke
# ECITIZEN_API_KEY=your-ecitizen-api-key

# ===========================================
# SMS TEMPLATES
# ===========================================
SMS_CONFIRMATION_TEMPLATE="Your eCitizen appointment is confirmed for {date} at {time}. Ref: {reference}"
SMS_REMINDER_TEMPLATE="Reminder: Your eCitizen appointment is tomorrow at {time}. Ref: {reference}"
